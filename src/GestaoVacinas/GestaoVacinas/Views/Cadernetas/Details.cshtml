@model GestaoVacinas.Models.Caderneta

@{
	ViewData["Title"] = "Details";
}

<div>
	<h1>@Model.Membro.Apelido</h1>
	<div class="col-md-6 mb-4">
		<div class="card h-100 border-primary">
			<div class="card-body">
				<p><strong>Nome:</strong> @Model.Membro.NomeCompleto</p>
				<p><strong>Data de nascimento:</strong> @Model.Membro.DataNascimento?.ToString("dd/MM/yyyy")</p>
				<p><strong>CPF:</strong> @Model.Membro.Cpf</p>
				<p><strong>CNS:</strong> @Model.Membro.Cns</p>
			</div>
		</div>
	</div>

	<h2>Caderneta de vacinas digital</h2>
	<div>
		@if (ViewBag.VacinasPadrao != null && ViewBag.VacinasPadrao.Count > 0) {
			<div class="row">
				@foreach (var vacina in ViewBag.VacinasPadrao) {
					<div class="col-md-4 mb-4">
						<div class="card h-100">
							<div class="card-body text-center">
								<span class="badge bg-primary">Status</span>
								<p class="card-title"><strong>@vacina.Nome</strong></p>
								<p class="card-text">Data recomendada: @vacina.DataRecomendada?.ToString("dd/MM/yyyy")</p>
								<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#detalhesModal-@vacina.Id">
									Mais detalhes
								</button>
							</div>
						</div>
					</div>

					<div class="modal fade" id="detalhesModal-@vacina.Id" tabindex="-1" aria-labelledby="detalhesModalLabel-@vacina.Id" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="detalhesModalLabel-@vacina.Id">Detalhes da vacina</h5>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>
								<div class="modal-body">
                                    <div class="mb-3">
                                        <p><strong>Teste:</strong></p>
                                        <p><strong>Nome da Vacina:</strong> @vacina.Nome</p>
                                        <p><strong>Data Recomendada:</strong> @vacina.DataRecomendada?.ToString("dd/MM/yyyy")</p>
                                        <p><strong>Descrição:</strong> @vacina.Descricao</p>
                                    </div>
									<form asp-action="SalvarDetalhesVacina" asp-controller="Cadernetas" method="post">
										<input type="hidden" name="VacinaId" value="@vacina.Id" />
										<input type="hidden" name="CadernetaId" value="@Model.Id" />

										<div class="mb-3">
											<label for="DataAplicacao" class="form-label">Data de aplicação</label>
											<input type="date" name="DataAplicacao" class="form-control" />
										</div>
										<div class="mb-3">
											<label for="NomeVacinador" class="form-label">Nome do vacinador</label>
											<input type="text" name="NomeVacinador" class="form-control" />
										</div>
										<div class="mb-3">
											<label for="Lote" class="form-label">Lote</label>
											<input type="text" name="Lote" class="form-control" />
										</div>
										<div class="mb-3">
											<label for="DataValidade" class="form-label">Data de validade</label>
											<input type="date" name="DataValidade" class="form-control" />
										</div>
										<div class="mb-3">
											<label for="Cnes" class="form-label">CNES</label>
											<input type="text" name="Cnes" class="form-control" />
										</div>
										<div class="mb-3">
											<label for="Observacoes" class="form-label">Observações</label>
											<textarea name="Observacoes" class="form-control"></textarea>
										</div>
										<button type="submit" class="btn btn-primary">Salvar</button>
									</form>
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		} else {
			<p>Nenhuma vacina padrão encontrada.</p>
		}
	</div>

    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#adicionarVacinaModal">
        Adicionar Vacina Complementar
    </button>

    <div class="modal fade" id="adicionarVacinaModal" tabindex="-1" aria-labelledby="adicionarVacinaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="adicionarVacinaModalLabel">Adicionar Vacina Complementar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="AdicionarVacinaComplementar" asp-controller="Cadernetas" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="form-group">
                            <label for="vacinaId">Selecione a Vacina:</label>
                            <select name="vacinaId" class="form-control" asp-items="@(new SelectList(ViewBag.VacinasDisponiveis, "Id", "Nome"))">
                                <option value="">-- Selecione uma Vacina --</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Adicionar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <h2>Vacinas Complementares</h2>
    <div>
        @if (ViewBag.DetalhesVacinasComplementares != null && ((IEnumerable<GestaoVacinas.Models.DetalhesVacina>)ViewBag.DetalhesVacinasComplementares).Any())
{
    <div class="row">
        @foreach (var detalhe in (IEnumerable<GestaoVacinas.Models.DetalhesVacina>)ViewBag.DetalhesVacinasComplementares)
        {
            string badgeClass = detalhe.Status switch
            {
                GestaoVacinas.Models.StatusVacina.Aplicada => "bg-success",
                GestaoVacinas.Models.StatusVacina.Proxima => "bg-warning",
                GestaoVacinas.Models.StatusVacina.Pendente => "bg-danger",
                GestaoVacinas.Models.StatusVacina.Futura => "bg-secondary",
                _ => "bg-secondary"
            };
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <span class="badge @badgeClass">@detalhe.Status</span>
                        <p class="card-title"><strong>@detalhe.Vacina.Nome</strong></p>
                        <p class="card-text">Data de Aplicação: @detalhe.DataAplicacao?.ToString("dd/MM/yyyy")</p>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#detalhesModal-@detalhe.Id">
                            Mais detalhes
                        </button>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="detalhesModal-@detalhe.Id" tabindex="-1" aria-labelledby="detalhesModalLabel-@detalhe.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="detalhesModalLabel-@detalhe.Id">Detalhes da vacina</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <span class="badge @badgeClass">@detalhe.Status</span>
                            <p><strong>Nome da Vacina:</strong> @detalhe.Vacina.Nome</p>
                            <p><strong>Data Recomendada:</strong> @detalhe.Vacina.DataRecomendada?.ToString("dd/MM/yyyy")</p>
                            <p><strong>Descrição:</strong> @detalhe.Vacina.Descricao</p>

                                    <form asp-action="SalvarDetalhesVacina" asp-controller="Cadernetas" method="post">
                                        <input type="hidden" name="Id" value="@detalhe.Id" />
                                        <input type="hidden" name="VacinaId" value="@detalhe.VacinaId" />
                                        <input type="hidden" name="CadernetaId" value="@detalhe.CadernetaId" />

                                        <div class="mb-3">
                                            <label for="DataAplicacao" class="form-label">Data de aplicação</label>
                                            <input type="date" name="DataAplicacao" value="@detalhe.DataAplicacao?.ToString("yyyy-MM-dd")" class="form-control" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="NomeVacinador" class="form-label">Nome do vacinador</label>
                                            <input type="text" name="NomeVacinador" value="@detalhe.NomeVacinador" class="form-control" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="Lote" class="form-label">Lote</label>
                                            <input type="text" name="Lote" value="@detalhe.Lote" class="form-control" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="DataValidade" class="form-label">Data de validade</label>
                                            <input type="date" name="DataValidade" value="@detalhe.DataValidade?.ToString("yyyy-MM-dd")" class="form-control" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="Cnes" class="form-label">CNES</label>
                                            <input type="text" name="Cnes" value="@detalhe.Cnes" class="form-control" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="Observacoes" class="form-label">Observações</label>
                                            <textarea name="Observacoes" class="form-control">@detalhe.Observacoes</textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Salvar</button>
                                    </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Nenhuma vacina complementar encontrada.</p>
}
    <div>
            <form asp-action="Delete" method="post" onsubmit="return confirm('Tem certeza que deseja excluir esta caderneta e todos os dados relacionados?');">
                <input type="hidden" name="id" value="@Model.Id" />
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Excluir Caderneta</button>
            </form>
	</div>

	<div>
		<a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
		<a asp-action="Index">Voltar à Lista</a>
	</div>
