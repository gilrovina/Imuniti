@using Microsoft.CodeAnalysis.CSharp.Syntax
@model GestaoVacinas.Models.Membros


<body style="font-family: 'Open Sans', sans-serif;">
            @if (Model is null)
            {
                    <p>Membro não encontrado</p>
            }
            else
            {
        <!-- Container principal para imagem e frase -->
        <div class="container mt-5">
            <div class="row align-items-center">
                <div class="col-md-6 text-center">
                    <img src="~/images/member-edit.svg" alt="Login" class="img-fluid login-img">
                </div>
                <div class="col-md-6 text-md-start text-center mt-5">
                    <h1 class="mb-3 fw-bold" style="color: #587EFD;">Editar dados do cadastro</h1>
                    <h3 class="mb-4 fs-6">Hora de dar um toque final nas suas informações!</h3>
                </div>
            </div>
        </div>
        <br />
        <!-- Container do box cinza -->
        <div class="box mt-5">
            <!-- Container para centralizar os formulários-->
            <div class ="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form method="post">
                            <div class="mt-3">
                                <label class="form-label">Apelido</label>
                                <input type="text" class="form-control border-primary" asp-for="Apelido"/>
                            </div>

                            <div class="mt-3">
                                <label class="form-label">Nome Completo</label>
                                <input type="text" class="form-control border-primary" asp-for="NomeCompleto" />
                            </div>

                            <div class="mt-3">
                                <label class="form-label">Data de Nascimento</label>
                                <input type="date" class="form-control border-primary" asp-for="DataNascimento" />
                            </div>

                            <div class="mt-3">
                                <label class="form-label">CPF</label>
                                <input type="text" class="form-control border-primary" id="cpf" placeholder="###.###.###-##" asp-for="Cpf" />
                            </div>

                            <div class="mt-3">
                                <label class="form-label">CNS</label>
                                <input type="text" class="form-control border-primary" asp-for="Cns" />
                            </div>

                            <!--Botão de salvar alterações-->
                            <div class=" text-center mt-3">
                                <button type="submit" class="btn btn-primary rounded-4" style="background-color:#587EFD; border-radius: 100px; width: 50%;">Salvar Alterações </button>
                                <!--<button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Membros">Deletar Membro</button> -->
                            </div>

                        </form>

                            <!--Botão de deletar membro-->
                            <div class="text-center">
                            <form method="post" asp-action="Delete" asp-controller="Membros">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger mt-3" style="border-radius: 100px; width: 25%;">Deletar Membro</button>
                            </form>
                            </div> 
                    </div>
                </div>
                </div>

        </div>
            }


</body>






<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
<script>
    $(document).ready(function(){
        $('#cpf').mask('000.000.000-00'); // Mascara para CPF
    });
</script>
