@{
    ViewData["Title"] = "Adicionar Membro";
}

@model GestaoVacinas.ViewModels.AddMembrosViewModel

<form method="post">

<h1>Adicionar Membro</h1>
<div class="mt-3">
    <label class="form-label">Apelido</label>
    <input type="text" class="form-control" asp-for="Apelido"/>
</div>

<div class="mt-3">
    <label class="form-label">Nome Completo</label>
    <input type="text" class="form-control" asp-for="NomeCompleto"/>
</div>

<div class="mt-3">
    <label class="form-label">Data de Nascimento</label>
    <input type="date" class="form-control" asp-for="DataNascimento"/>
</div>

<div class="mt-3">
    <label class="form-label">CPF</label>
    <input type="text" class="form-control" id="cpf" placeholder="###.###.###-##" asp-for="Cpf"/>
</div>

<div class="mt-3">
    <label class="form-label">CNS</label>
    <input type="text" class="form-control" asp-for="Cns"/>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Adicionar Membro</button>
</div>

</form>











<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
<script>
    $(document).ready(function(){
        $('#cpf').mask('000.000.000-00'); // Mascara para CPF
    });
</script>
